<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.dwipa.user.csc.Auth.SplashscreenActivity">

    <ImageView
        android:id="@+id/tvSplash"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/app_name"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_newlogo_cdn"/>

    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/dwipa"
        android:layout_above="@+id/cdn"
        android:gravity="center"
        android:textSize="12sp"
        android:text="Developed by DWIPA Developer"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/cdn"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textSize="13sp"
        android:text="for PT. Capella Dinamik Nusantara"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>